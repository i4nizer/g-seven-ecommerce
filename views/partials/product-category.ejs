<div class="category">
    <h3>#<%- category.name %></h3>
    <div class="products-box">
        
        <%# Render list of products %>
        <% const products = category.products %>
        <% for (const index in products) { %>
            <%- include('product-card', { key: index, product: products[index], cartUrl: '', buyUrl: '' }) %>
        <% } %>

    </div>
</div>

<% if (key == 0) { // avoid duplicate %>
<style>
.category {
    width: 100%;
    height: fit-content;
    padding: 2dvw 0;

    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;

    color: var(--black);
    background-color: var(--white);
}

.category h3 {
    width: 100%;
    height: 50px;

    font-size: 40px;
    text-align: center;
}

.category .products-box {
    width: calc(100% - 10dvw);
    height: fit-content;
    padding: 1dvw 5dvw;

    gap: 2dvw;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}
</style>
<% } %>