<form id="sign-up-form" action="/authentication/users/sign-up" method="post">
    <h1>Sign Up</h1>
    <sub>Please provide necessary credentials.</sub>

    <label for="firstname">First Name:</label>
    <input type="text" id="firstname" name="firstname" minlength="3" maxlength="255"
        placeholder="Enter your first name" required>

    <label for="lastname">Last Name:</label>
    <input type="text" id="lastname" name="lastname" minlength="3" maxlength="255"
        placeholder="Enter your last name" required>

    <label for="username">Username:</label>
    <input type="text" id="username" name="username" minlength="3" maxlength="255" placeholder="Enter your username"
        required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" minlength="3" maxlength="255" placeholder="Enter your email"
        required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" minlength="8" placeholder="Enter your password" required>

    <label for="phone">Phone:</label>
    <input type="tel" id="phone" name="phone" minlength="3" maxlength="20" placeholder="Enter your phone number"
        required>

    <label for="role">Role:</label>
    <select name="role" id="role">
        <option value="customer">Customer</option>
        <option value="admin">Admin</option>
    </select>

    <button type="submit">Sign Up</button>
</form>

<style>
#sign-up-form {
    width: 460px;
    height: fit-content;
    padding: 20px;

    display: grid;
    grid-template-rows: repeat(1fr, 15);
    grid-template-columns: 1fr 1fr;

    border: 1px solid var(--black);
}

#sign-up-form h1 {
    text-align: center;
    grid-column: 1 / span 2;
}

#sign-up-form sub {
    color: var(--accent);
    text-align: center;
    grid-column: 1 / span 2;
}

#sign-up-form label {
    margin: 10px 0 0 0;
    grid-column: 1 / span 2;
}

#sign-up-form label[for="firstname"] {
    grid-row: 3;
    grid-column: 1 / span 1;
}

#sign-up-form label[for="lastname"] {
    grid-row: 3;
    grid-column: 2 / span 1;
}

#sign-up-form input {
    width: calc(100% - 20px);
    height: 40px;
    padding: 0 10px;
    grid-column: 1 / span 2;
}

#sign-up-form input[id="firstname"] {
    grid-row: 4;
    grid-column: 1 / span 1;
}

#sign-up-form input[id="lastname"] {
    grid-row: 4;
    grid-column: 2 / span 1;
}

#sign-up-form select {
    width: 100%;
    height: 40px;
    padding: 0 10px;
    grid-column: 1 / span 2;
}

#sign-up-form select option {
    font-size: medium;
}

#sign-up-form button {
    width: 100%;
    height: 50px;
    margin: 15px 0 0 0;

    color: var(--white);
    font-weight: bolder;
    grid-column: 1 / span 2;

    border: 1px solid var(--blue);
    background-color: var(--blue);

    transition-duration: 250ms;
}

#sign-up-form button:hover {
    color: var(--blue);
    background-color: var(--white);
}
</style>