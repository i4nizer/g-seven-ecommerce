    width: 460px;
    height: fit-content;
    padding: 20px;

    display: flex;
    justify-content: center;
    flex-direction: column;

    border: 1px solid var(--black);
}

#checkout-form sub {
    color: var(--accent);
    text-align: center;
}

#checkout-form h1 {
    text-align: center;
}

#checkout-form label {
    margin: 10px 0 0 0;
}

#checkout-form input {
    width: calc(100% - 20px);
    height: 40px;
    padding: 0 10px;
}

#checkout-form select {
    width: 100%;
    height: 40px;
    padding: 0 10px;
}

#checkout-form select option {
    font-size: medium;
}

#checkout-form button {
    width: 100%;
    height: 50px;
    margin: 15px 0 0 0;

    color: var(--white);
    font-weight: bolder;

    border: 1px solid var(--blue);
    background-color: var(--blue);

    transition-duration: 250ms;
}

#checkout-form button:hover {
    color: var(--blue);
    background-color: var(--white);
}
</style>