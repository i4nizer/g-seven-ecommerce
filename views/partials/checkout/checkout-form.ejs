<form action="/checkout" method="post" id="checkout-form">
    <h1>Checkout Details</h1>
    <sub>Please provide necessary details.</sub>

    <label for="address">Address:</label>
    <input type="text" id="address" name="address" minlength="3" maxlength="255" placeholder="Enter your address" required>

    <label for="city">City:</label>
    <input type="text" id="city" name="city" minlength="3" maxlength="255" placeholder="Enter your city" required>
    
    <label for="state">State:</label>
    <input type="text" id="state" name="state" minlength="3" maxlength="255" placeholder="Enter your state">
    
    <label for="postalCode">Postal Code:</label>
    <input type="text" id="postalCode" name="postalCode" minlength="3" maxlength="255" placeholder="Enter your postal code" required>
    
    <label for="country">Country:</label>
    <input type="text" id="country" name="country" minlength="3" maxlength="255" placeholder="Enter your country" required>

    <label for="paymentMethod">Payment Method:</label>
    <select name="paymentMethod" id="paymentMethod">
        <option value="Cash On Delivery">Cash on Delivery</option>
    </select>

    <button type="submit">Purchase</button>
</form>

<style>
