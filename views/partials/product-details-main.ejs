<div id="product-details-main">
    <h1 class="product-name"><%- product.name %></h1>
    <span class="attribute">(<%- product.images[0].attribute %>)</span>
    <img id="product-image-preview" src="<%- product.images[0].url %>" alt="Image">
    
    <h3 class="description-title">Description</h3>
    <p class="description-body"><%- product.description %></p>
    
    <span class="quantity">Stocks: <%- product.quantity %></span>
    <span class="price">Php <%- product.price %></span>
    <button class="add-to-cart-btn">Add To Cart</button>

    <%- include('product-reviews') %>
</div>

<style>
#product-details-main {
    width: 70%;
    height: auto;

    overflow: auto;

    display: grid;
    grid-template-rows: 70px auto 70px auto;
    grid-template-columns: 2fr 1fr 3fr;
}

#product-details-main .product-name {    
    color: var(--red);

    grid-row: 1;
    grid-column: 1;
    align-self: center;
    justify-self: center;
}

#product-details-main .attribute {    
    color: var(--black);
    font-size: large;

    grid-row: 1;
    grid-column: 2;
    align-self: center;
    justify-self: center;
}

#product-details-main #product-image-preview {
    width: 50%;
    aspect-ratio: 1 / 1;

    align-self: center;
    justify-self: center;

    grid-row: 2;
    grid-column: 1 / span 2;
}

#product-details-main .description-title {
    align-self: center;
    justify-self: center;

    grid-row: 1;
    grid-column: 3;
}

#product-details-main .description-body {
    padding: 10px;

    overflow: auto;
    grid-row: 2;
    grid-column: 3;
    align-self: stretch;
    justify-self: stretch;

    border-left: 1px solid var(--light-gray);
}

#product-details-main .quantity {
    margin: 0 0 0 2dvw;
    
    grid-row: 3;
    grid-column: 1;
    align-self: center;
    justify-self: flex-start;
}

#product-details-main .price {
    grid-row: 3;
    grid-column: 2;
    align-self: center;
    justify-self: center;
}

#product-details-main button {
    margin: 0 2dvw 0 0;
    padding: 20px 30px;

    color: var(--white);
    font-size: large;
    font-weight: bolder;
    
    grid-row: 3;
    grid-column: 3;
    align-self: center;
    justify-self: flex-end;

    border: 2px solid var(--red);
    background-color: var(--red);
}

#product-details-main button:hover {
    color: var(--red);
    background-color: transparent;
}
</style>