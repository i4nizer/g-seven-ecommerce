<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Dashboard</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .row.content {height: auto;}    
    .sidenav {
      background-color: #f1f1f1;
      height: 100%;
    }
    .hidden {
      display: none;
    }
    .table th, .table td {
      text-align: center;
    }
    #userChart {
      max-width: 600px;
      margin: auto;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-inverse visible-xs">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="#">Logo</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#" onclick="showSection('dashboard', this)">Dashboard</a></li>
        <li><a href="#" onclick="showSection('products', this)">Products</a></li>
        <li><a href="#" onclick="showSection('users', this)">Users</a></li>
        <li><a href="#" onclick="showSection('orders', this)">Orders</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-3 sidenav hidden-xs">
      <h2>Logo</h2>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#" onclick="showSection('dashboard', this)">Dashboard</a></li>
        <li><a href="#" onclick="showSection('products', this)">Products</a></li>
        <li><a href="#" onclick="showSection('users', this)">Users</a></li>
        <li><a href="#" onclick="showSection('orders', this)">Orders</a></li>
      </ul><br>
    </div>
    
    <div class="col-sm-9">
      <!-- Dashboard Section -->
      <div id="dashboard" class="well">
        <h4>Dashboard</h4>
        <canvas id="userChart"></canvas>
      </div>

      <!-- Products Section -->
      <div id="products" class="well hidden">
        <h4>Products</h4>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Product ID</th>
              <th>Product Name</th>
              <th>Price</th>
              <th>Stock</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Product 1</td>
              <td>$10.00</td>
              <td>50</td>
            </tr>
            <tr>
              <td>2</td>
              <td>Product 2</td>
              <td>$15.00</td>
              <td>30</td>
            </tr>
            <tr>
              <td>3</td>
              <td>Product 3</td>
              <td>$20.00</td>
              <td>20</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Users Section -->
      <div id="users" class="well hidden">
        <h4>Users</h4>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>User ID</th>
              <th>User Name</th>
              <th>Email</th>
              <th>Registration Date</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>User 1</td>
              <td>user1@example.com</td>
              <td>2024-01-01</td>
            </tr>
            <tr>
              <td>2</td>
              <td>User 2</td>
              <td>user2@example.com</td>
              <td>2024-01-02</td>
            </tr>
            <tr>
              <td>3</td>
              <td>User 3</td>
              <td>user3@example.com</td>
              <td>2024-01-03</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Orders Section -->
      <div id="orders" class="well hidden">
        <h4>Orders</h4>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>User ID</th>
              <th>Order Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>1</td>
              <td>2024-01-10</td>
              <td>Shipped</td>
            </tr>
            <tr>
              <td>2</td>
              <td>2</td>
              <td>2024-01-12</td>
              <td>Processing</td>
            </tr>
            <tr>
              <td>3</td>
              <td>3</td>
              <td>2024-01-15</td>
              <td>Delivered</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  // Function to show the selected section and hide others
  function showSection(sectionId, element) {
    // Hide all sections
    var sections = document.querySelectorAll('.well');
    sections.forEach(function(section) {
      section.classList.add('hidden');
    });
    
    // Show the selected section
    document.getElementById(sectionId).classList.remove('hidden');

    // Remove 'active' class from all sidebar links
    var links = document.querySelectorAll('.nav-pills li');
    links.forEach(function(link) {
      link.classList.remove('active');
    });

    // Add 'active' class to the clicked link
    element.parentElement.classList.add('active');
  }

  // Chart.js initialization for the Dashboard
  var ctx = document.getElementById('userChart').getContext('2d');
  var userChart = new Chart(ctx, {
      type: 'pie', // Changed to pie chart
      data: {
          labels: ['Users', 'Orders', 'Products'], // Labels for pie chart
          datasets: [{
              label: 'Distribution',
              data: [300, 50, 100], // Sample data for users, orders, and products
              backgroundColor: [
                  'rgba(75, 192, 192, 0.6)',
                  'rgba(255, 99, 132, 0.6)',
                  'rgba(54, 162, 235, 0.6)'
              ],
              borderColor: [
                  'rgba(75, 192, 192, 1)',
                  'rgba(255, 99, 132, 1)',
                  'rgba(54, 162, 235, 1)'
              ],
              borderWidth: 1
          }]
      },
      options: {
          responsive: true,
          plugins: {
              legend: {
                  position: 'top',
              },
              tooltip: {
                  callbacks: {
                      label: function(tooltipItem) {
                          return tooltipItem.label + ': ' + tooltipItem.raw;
                      }
                  }
              }
          }
      }
  });

  // Set Dashboard as the default view
  showSection('dashboard');
</script>

</body>
</html>
